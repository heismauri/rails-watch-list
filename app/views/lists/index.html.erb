<div class="banner" style="--image: url(https://images.unsplash.com/photo-1512070679279-8988d32161be?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1578&q=80)">
  <div class="container">
    <h1>WatchList</h1>
  </div>
</div>
<div class="container">
  <div class="row py-4">
    <% @lists.each do |list| %>
      <div class="col-6">
        <div class="card mb-4 index rounded shadow-sm" style="--image: url(<%= list.image_url %>)">
          <h2 class="text-center"><%= link_to list.name, list_path(list) %></h2>
        </div>
      </div>
    <% end %>
  </div>
</div>
