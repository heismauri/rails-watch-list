<div class="container">
  <div class="row py-4">
    <% @lists.each do |list| %>
      <div class="col-6">
        <div class="card mb-4 index rounded shadow-sm" style="--image: url('<%= cl_image_path list.banner.key, width: 600, height: 400, crop: :fill %>')">
